<p id="notice"><%= notice %></p>

<h1>Photographers</h1><br>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>年齢</th>
      <th>カメラ</th>
      <th>性別</th>
      <th>カテゴリー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photographers.each do |photographer| %>
      <tr>
        <td><%= photographer.name %></td>
        <td><%= photographer.age %></td>
        <td><%= photographer.camera %></td>
        <td><%= photographer.gender %></td>
        <td><%= photographer.category %></td>
        <td><%= link_to '詳細', photographer %></td>
        <td><%= link_to '編集', edit_photographer_path(photographer) %></td>
        <td><%= link_to '削除', photographer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

