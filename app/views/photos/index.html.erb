<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Date</th>
      <th>Location</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td> 
          <%= link_to photo do %>
            <%= image_tag photo.image.url, class: 'post_image', size: '400x200' %>
          <% end %>
        </td>
        <td><%= photo.date %></td>
        <td><%= photo.location %></td>
        <td><%= photo.title %></td>
        <td><%= photo.description %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

