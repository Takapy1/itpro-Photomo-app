<h1>ログイン</h1>

<%= form_with(url: login_path, local: true, class: "form-area") do |form| %>
  
    <div class="field">
      <h3><%= form.label :name, "名前" %></h3>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <h3><%= form.label :password, "パスワード" %></h3>
      <%= form.password_field :password %>
    </div>

    <div class="field">
        <input type="radio" name="user" value=0>Photographer
        <input type="radio" name="user" value=1>Viewer
    </div>
  
    <div class="actions">
      <%= form.submit value = "ログイン", class: "btn-create" %>
    </div>
  <% end %>