<%= form_with(model: viewer, local: true) do |form| %>
  <% if viewer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(viewer.errors.count, "つのエラーがあります。") %> </h2>

      <ul>
        <% viewer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :gender %>
    <%= form.select :gender, [["male", "male"],["female", "female"]], include_blank: "選択してください" %>
    <%#= form.text_field :gender %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit "登録する", class: "btn-create" %>
  </div>
<% end %>
